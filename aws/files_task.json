{
    "family": "{{program}}-{{environment}}-{{project}}-files",
    "taskRoleArn": "arn:aws:iam::{{account_id}}:role/power-user-{{program}}-{{environment}}-{{project}}-ecs-task-role",
    "executionRoleArn": "arn:aws:iam::{{account_id}}:role/power-user-{{program}}-{{environment}}-{{project}}-ecs-task-execution-role",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "containerDefinitions": [
        {
            "name": "sumologic-firelens",
            "image": "public.ecr.aws/aws-observability/aws-for-fluent-bit:stable",
            "cpu": 0,
            "portMappings": [],
            "essential": true,
            "environment": [],
            "mountPoints": [],
            "volumesFrom": [],
            "user": "0",
            "firelensConfiguration": {
                "type": "fluentbit",
                "options": {
                    "enable-ecs-log-metadata": "true"
                }
            }
        },
        {
            "name": "newrelic-infra",
            "image": "newrelic/nri-ecs:1.9.2",
            "cpu": 0,
            "portMappings": [],
            "essential": true,
            "secrets": [
                {
                    "name": "NRIA_LICENSE_KEY",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:monitoring/newrelic:api_key::"
                }
            ],
            "environment": [
                {
                    "name": "NEW_RELIC_HOST",
                    "value": "gov-collector.newrelic.com"
                },
                {
                    "name": "NEW_RELIC_APP_NAME",
                    "value": "{{program}}-{{environment}}-{{project}}-files"
                },
                {
                    "name": "NRIA_IS_FORWARD_ONLY",
                    "value": "true"
                },
                {
                    "name": "NEW_RELIC_DISTRIBUTED_TRACING_ENABLED",
                    "value": "true"
                },
                {
                    "name": "NRIA_PASSTHROUGH_ENVIRONMENT",
                    "value": "ECS_CONTAINER_METADATA_URI,ECS_CONTAINER_METADATA_URI_V4,FARGATE"
                },
                {
                    "name": "FARGATE",
                    "value": "true"
                },
                {
                    "name": "NRIA_CUSTOM_ATTRIBUTES",
                    "value": "{\"nrDeployMethod\":\"downloadPage\"}"
                },
                {
                    "name": "NRIA_OVERRIDE_HOST_ROOT",
                    "value": ""
                }
            ],
            "mountPoints": [],
            "volumesFrom": []
        },
        {
            "name": "files",
            "image": "{{image_id}}",
            "cpu": 0,
            "portMappings": [
                {
                    "containerPort": 8081,
                    "hostPort": 8081,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "secrets": [
                {
                    "name": "INDEXD_URL",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:indexd_url::"
                },
                {
                    "name": "NEW_RELIC_LICENSE_KEY",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:monitoring/newrelic:api_key::"
                },
                {
                    "name": "MYSQL_HOST",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:rds_host::"
                },
                {
                    "name": "MYSQL_USER",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:rds_username::"
                },
                {
                    "name": "MYSQL_PASSWORD",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:rds_password::"
                },
                {
                    "name": "DCF_BASE_URL",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:dcf_base_url::"
                },
                {
                    "name": "DCF_FILE_URL",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:dcf_file_url::"
                },
                {
                    "name": "FILE_MANIFEST_BUCKET_NAME",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:file_manifest_bucket_name::"
                },
                {
                    "name": "CLOUDFRONT_KEY_PAIR_ID",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:cloudfront_key_pair_id::"
                },
                {
                    "name": "CLOUDFRONT_PRIVATE_KEY_BASE64",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:cloudfront_private_key::"
                },
                {
                    "name": "CLOUDFRONT_DOMAIN",
                    "valueFrom": "arn:aws:secretsmanager:us-east-1:{{account_id}}:secret:bento/{{project}}/{{environment}}:cloudfront_domain::"
                }
            ],
            "environment": [
                {
                    "name": "PROJECT",
                    "value": "{{project}}"
                },
                {
                    "name": "VERSION",
                    "value": "{{image_tag}}"
                },
                {
                    "name": "BACKEND_URL",
                    "value": "https://{{domain_name}}/v1/graphql/"
                },
                {
                    "name": "AUTHORIZATION_ENABLED",
                    "value": "false"
                },
                {
                    "name": "DATE",
                    "value": "{{date}}"
                },
                {
                    "name": "URL_SRC",
                    "value": "indexd"
                },
                {
                    "name": "NEW_RELIC_LABELS",
                    "value": "Project:{{project}};Environment:{{environment}}"
                },
                {
                    "name": "NEW_RELIC_APP_NAME",
                    "value": "{{project}}-{{environment}}-files"
                },
                {
                    "name": "CLOUDFRONT_PRIVATE_KEY",
                    "value": "{{cf_private_key}}"
                },
                {
                    "name": "MYSQL_PORT",
                    "value": "3306"
                },
                {
                    "name": "MYSQL_DATABASE",
                    "value": "ctdc"
                },
                {
                    "name": "FAKE",
                    "value": "false"
                }
            ],
            "mountPoints": [],
            "volumesFrom": [],
            "logConfiguration": {
                "logDriver": "awsfirelens",
                "options": {
                    "Format": "json_lines",
                    "Host": "{{sumo_collector_endpoint}}",
                    "Name": "http",
                    "Port": "443",
                    "Retry_Limit": "2",
                    "URI": "/receiver/v1/http/{{sumo_collector_token}}",
                    "tls": "on",
                    "tls.verify": "off"
                }
            }
        }
    ]
}